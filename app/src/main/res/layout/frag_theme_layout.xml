<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="64dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_card_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/theme_card_sentenceEN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:alpha="0"
                android:bufferType="spannable"
                android:gravity="center"
                android:maxLines="4"
                android:minLines="2"
                android:padding="8dp"
                android:scaleY="0"
                android:singleLine="false"
                android:textColor="#d9d9d9"
                android:textSize="28sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/theme_card_sentenceRU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:alpha="0"
                android:bufferType="spannable"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="4"
                android:minLines="2"
                android:padding="8dp"
                android:scaleY="0"
                android:singleLine="false"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/theme_card_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/theme_progress_background" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/theme_card_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/say_example_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view"
                    android:contentDescription="@string/say_example_icon" />

                <ImageView
                    android:id="@+id/im_favoriteExample"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/like_example_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view"
                    android:contentDescription="@string/add_to_favorite_icon" />

                <TextView
                    android:id="@+id/tv_example_difficult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    tools:text="сложность: легко"
                    android:textSize="22sp"
                    android:translationY="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/im_favoriteExample"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/theme_card_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:elevation="64dp"
                    android:stepSize="1"
                    android:value="50"
                    android:valueFrom="0"
                    android:valueTo="100"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/im_favoriteExample"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_example_difficult"
                    app:thumbColor="@android:color/holo_green_dark"
                    app:thumbRadius="5dp"
                    app:tickVisible="false"
                    app:trackColorActive="@android:color/holo_green_dark"
                    app:trackColorInactive="@android:color/holo_green_light" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/keyboard"
        layout="@layout/keyboard_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:padding="8dp"
        android:elevation="65dp"
        android:transitionName="theme"
        android:layout_margin="8dp"
        android:id="@+id/theme_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="32sp"
        tools:text="PLURALS FORM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>